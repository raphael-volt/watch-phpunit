{
    "extension": [
        "ts"
    ],
    "spec": "tests/**/*.spec.ts",
    "require": "ts-node/register",
    "diff": true,
    "opts": false,
    "package": "./package.json",
    "reporter": "spec",
    "timeout": 1000000,
    "ui": "bdd",
    "watch-files": [
    "src /**/*.ts'", 
    "tests /**/*.ts"
    ],
    "watch-ignore": [
        ".vscode",
        "bin",
        "dist",
        "node_modules",
        "www"
    ]
}